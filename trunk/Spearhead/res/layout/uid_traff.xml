<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bground_dark"
    android:orientation="vertical" >

    <FrameLayout
         android:id="@+id/uid_traffTitleBackground"
        android:layout_width="fill_parent"
        android:layout_height="48dip"
        android:background="@drawable/maintab_title_bg0"
        android:paddingLeft="10dip"
        android:paddingRight="10dip" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/history_back"
                android:layout_width="35dip"
                android:layout_height="35dip"
                android:layout_gravity="center"
                android:background="@drawable/back_btn" />

            <ImageView
                android:layout_width="0.5dip"
                android:layout_height="40dip"
                android:layout_gravity="center_vertical"
                android:background="@drawable/divider" />
        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="历史详情"
            android:textColor="@color/whitesmoke"
            android:textSize="23sp" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_margin="5dip"
        android:layout_weight="1.0"
        android:background="@drawable/bg_about"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/new_chart_tv"
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:background="@color/main_background_color"
            android:gravity="right|center_vertical"
            android:orientation="vertical"
            android:paddingRight="25dp"
            android:textColor="@color/darkgray2"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/new_series"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/main_background_color"
            android:orientation="vertical"
            android:paddingRight="3dp" >
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_margin="5dip"
        android:layout_weight="1.0"
        android:background="@drawable/bg_about"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="@color/main_background_color"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="25dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="1dp"
                    android:gravity="top|center_horizontal"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/new_budget_tv"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="@color/main_background_color"
                        android:gravity="left|center_horizontal"
                        android:paddingLeft="14dp"
                        android:textColor="@color/darkgray2"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/img_icon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_launcher" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:text="     "
                        android:textColor="@color/darkgray2"
                        android:textSize="3sp" />

                    <TextView
                        android:id="@+id/tv_appname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="TextView"
                        android:textColor="@color/darkgray2"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:text="     "
                        android:textColor="@color/darkgray2"
                        android:textSize="3sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:paddingLeft="14dp"
                        android:text="移动数据流量:"
                        android:textColor="@color/darkgray2"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_mobile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:paddingLeft="14dp"
                        android:text="TextView"
                        android:textColor="@color/darkgray2"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:text="     "
                        android:textColor="@color/darkgray2"
                        android:textSize="3sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:paddingLeft="14dp"
                        android:text="WIFI数据流量:"
                        android:textColor="@color/darkgray2"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_wifi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:paddingLeft="14dp"
                        android:text="TextView"
                        android:textColor="@color/darkgray2"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/new_budget"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:background="@color/main_background_color"
            android:orientation="vertical" >
        </LinearLayout>
    </LinearLayout>

</LinearLayout>