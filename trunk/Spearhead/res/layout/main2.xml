<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bground_dark"
    android:cacheColorHint="#00000000"
    android:orientation="vertical" >

    <!-- 标题栏开始 -->

    <RelativeLayout
        android:id="@+id/main2TitleBackground"
        android:layout_width="fill_parent"
        android:layout_height="48dip"
        android:background="@drawable/maintab_title_bg0"
        android:orientation="horizontal"
        android:paddingRight="10dip" >

        <TextView
            android:id="@+id/firewall_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dip"
            android:textColor="@color/white"
            android:textSize="23sp" />
        <Button
            android:id="@+id/setting_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="设置"
            />
    </RelativeLayout>
    <!-- 标题栏结束 -->

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="30dip"
        android:background="@drawable/bground_dark"
        android:orientation="horizontal"
        android:paddingRight="5dip" >

        <TextView
            android:id="@+id/firewall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:textColor="@color/darkgray2"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/wifi_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:visibility="invisible"
            android:text="WIFI  "
            android:textColor="@color/darkgray2"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/e_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/wifi_icon"
            android:visibility="invisible"
            android:text="2G/3G    "
            android:textColor="@color/darkgray2"
            android:textSize="14sp" />
    </RelativeLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/divider" />

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal" >

        <com.hiapk.firewall.MyListView
            android:id="@+id/app_list"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:cacheColorHint="#00000000"
            android:divider="@drawable/divider"
            android:dividerHeight="0.5dip" />
        <LinearLayout
            android:id="@+id/loading_content"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:orientation="vertical" >

            <ProgressBar
                android:id="@+id/loading_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="获取列表中，请稍候..."
                android:textSize="18sp" />
        </LinearLayout>
    </FrameLayout>
    <LinearLayout
        android:id="@+id/setting_menu"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/maintab_title_bg0"
        android:orientation="horizontal"
        android:paddingRight="10dip" >
       <Button
           android:layout_width="fill_parent"
           android:layout_height="0dip"
           android:layout_weight="1"
           android:text="测试1" />

       <Button
           android:layout_width="fill_parent"
           android:layout_height="0dip"
           android:layout_weight="1"
           android:text="测试2" />

       <Button
           android:layout_width="fill_parent"
           android:layout_height="0dip"
           android:layout_weight="1"
           android:text="测试3" />

       <Button
           android:layout_width="fill_parent"
           android:layout_height="0dip"
           android:layout_weight="1"
           android:text="测试4" />

       <Button
           android:layout_width="fill_parent"
           android:layout_height="0dip"
           android:layout_weight="1"
           android:text="测试5" />

       <Button
           android:layout_width="fill_parent"
           android:layout_height="0dip"
           android:layout_weight="1"
           android:text="测试6" />

    </LinearLayout>

</LinearLayout>