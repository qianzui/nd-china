<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bground_dark"
    android:orientation="vertical" >

    <!-- 标题栏开始 -->

    <FrameLayout
        android:id="@+id/settingTitleBackground"
        android:layout_width="fill_parent"
        android:layout_height="48dip"
        android:background="@drawable/maintab_title_bg0"
        android:paddingLeft="13dip"
        android:paddingRight="10dip" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/setting_back"
                android:layout_width="35dip"
                android:layout_height="35dip"
                android:layout_gravity="center"
                android:background="@drawable/back_btn"
                android:contentDescription="@string/img_content_backbtn" />

            <ImageView
                android:layout_width="0.5dip"
                android:layout_height="40dip"
                android:layout_gravity="center_vertical"
                android:background="@drawable/divider"
                android:contentDescription="@string/img_content_backbtn_line" />
        </LinearLayout>

        <TextView
            android:id="@+id/settingTitle"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="@string/title_systemsetting"
            android:textColor="@color/white"
            android:textSize="23sp" />
    </FrameLayout>
    <!-- 标题栏结束 -->


    <!-- 第二行开始 -->

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/setting_notify"
                android:layout_width="fill_parent"
                android:layout_height="55dp"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:textColor="@color/darkgray2"
                    android:textSize="20dp" />
            </LinearLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/img_content_divide_line"
                android:src="@drawable/divider" />

            <LinearLayout
                android:id="@+id/setting_float"
                android:layout_width="fill_parent"
                android:layout_height="55dp"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:textColor="@color/darkgray2"
                    android:textSize="20dp" />
            </LinearLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/img_content_divide_line"
                android:src="@drawable/divider" />

            <LinearLayout
                android:id="@+id/setting_help_message"
                android:layout_width="fill_parent"
                android:layout_height="55dp"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:textColor="@color/darkgray2"
                    android:textSize="20dp" />
            </LinearLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/img_content_divide_line"
                android:src="@drawable/divider" />

            <LinearLayout
                android:id="@+id/setting_freshplv"
                android:layout_width="fill_parent"
                android:layout_height="55dp"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="12dp"
                android:paddingRight="12dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/arrow_setting"
                    android:gravity="left"
                    android:text="@string/prefrence_setting_listbox_fresh"
                    android:textColor="@color/darkgray2"
                    android:textSize="20dp" />
            </LinearLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/img_content_divide_line"
                android:src="@drawable/divider" />

            <LinearLayout
                android:id="@+id/setting_auto_saveFirewalldata"
                android:layout_width="fill_parent"
                android:layout_height="55dp"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:textColor="@color/darkgray2"
                    android:textSize="20dp" />
            </LinearLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/img_content_divide_line"
                android:src="@drawable/divider" />

            <LinearLayout
                android:id="@+id/setting_isfloat_touchable"
                android:layout_width="fill_parent"
                android:layout_height="55dp"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:textColor="@color/darkgray2"
                    android:textSize="20dp" />
            </LinearLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/img_content_divide_line"
                android:src="@drawable/divider" />

            <RelativeLayout
                android:id="@+id/setting_shake_switch"
                android:layout_width="fill_parent"
                android:layout_height="55dp"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dip"
                    android:text="@string/prefrence_setting_shake_to_switch"
                    android:textColor="@color/darkgray2"
                    android:textSize="20dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12dip"
                    android:background="@drawable/arrow_setting" />
            </RelativeLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/img_content_divide_line"
                android:src="@drawable/divider" />

            <LinearLayout
                android:id="@+id/setting_cleardata"
                android:layout_width="fill_parent"
                android:layout_height="55dp"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="12dp"
                android:paddingRight="12dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="@string/prefrence_setting_clickbox_dataclear"
                    android:textColor="@color/darkgray2"
                    android:textSize="20dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>