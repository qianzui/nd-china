<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<!-- 标题栏开始 -->	
	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal" >

	<TextView 
	    android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:text="@string/app_name"
		android:textColor="@color/white"
		android:background="@drawable/maintab_toolbar_bg"		
	    />
	</LinearLayout>
	<!-- 标题栏结束 -->	
	
	<!-- 第一行开始 -->	
	<LinearLayout 
	   	android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:layout_weight="1.0"		
		android:layout_margin="5dp"
		android:background="@drawable/bg_about"
	    >
	
	<!-- 第一行的第一行标题 开始-->	
	<LinearLayout 
	    		android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:layout_weight="0.1"
				android:layout_margin="5dip"
		        >
		        
		        <LinearLayout 
		            android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal"
					android:layout_weight="1"
					android:gravity="left"	
		            >
		            <ImageView 
		         		android:layout_width="wrap_content"
		   		 		android:layout_height="wrap_content"		   		 	   		 
		   			    android:src="@drawable/mobile2"/>
		            <TextView
		    	 		 android:layout_width="fill_parent"
		   				 android:layout_height="wrap_content"
		   				 android:gravity="center"	
		    			 android:textColor="#000"	
		    			 android:textSize="25dp"
		        		 android:text="@string/twoGthreeG" />
		        </LinearLayout>
		        
		        <LinearLayout 
		            android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal"
					android:layout_weight="1"
		            >
		        	
		         </LinearLayout>	 
	    
	</LinearLayout>
	<!-- 第一行的第一行标题 结束-->	
	
	<!-- 第一行的第二行 开始-->	
	<LinearLayout 
	    		android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:layout_weight="1.0"	
	    >
		        
	<!-- 第一行的第一个格子 开始-->	
	<LinearLayout 
	   	android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:orientation="vertical"
		android:layout_weight="0.5"	
		android:background="@drawable/bg_about"
		
	    >
	    <!-- 第一行的第一个格子 内部的布局开始-->	
		<LinearLayout 
		   	android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:orientation="vertical"
			android:layout_margin="10dp"	
		    >	    
		 
		 
		     <!-- 第一行的第一个格子 填充内容开始--> 
		    <LinearLayout 
		        android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:orientation="horizontal"
				android:layout_weight="1.0"						
		        >
		        
		        <TextView
		    	 android:layout_width="wrap_content"
		   		 android:layout_height="wrap_content"		    	 
		    	 
		    	 android:textColor="#000"		
		    	 android:textSize="20dp"	
		         android:text="@string/todayUsed" />

		        <TextView
		            android:id="@+id/todayRate"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            
		            android:gravity="right"
		            android:text="@string/rate"
		            android:textColor="@color/lime"
		            android:textSize="20dp" />
		        <TextView
		            android:id="@+id/unit1"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            
		            android:text="KB"
		            android:textColor="@color/black"
		            android:textSize="20dp" />
		    	 
		    </LinearLayout>
		    
		    <LinearLayout 
		        android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:orientation="horizontal"
				android:layout_weight="1.0"	
		        >
		        <TextView
		    	 android:layout_width="wrap_content"
		   		 android:layout_height="wrap_content"		    	 
		    	
		    	 android:textColor="#000"	
		    	 android:textSize="20dp"	
		         android:text="@string/weekUsed" />

		        <TextView
		            android:id="@+id/weekRate"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		           
		            android:gravity="right"
		            android:text="@string/rate"
		            android:textColor="@color/lime"
		            android:textSize="20dp" />
		        <TextView
		            android:id="@+id/unit2"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            
		            android:text="KB"
		            android:textColor="@color/black"
		            android:textSize="20dp" />
		        
		        
		    </LinearLayout>
		    
		    <LinearLayout 
		        android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:orientation="horizontal"
				android:layout_weight="1.0"	
		        >
		        <TextView
		    	 android:layout_width="wrap_content"
		   		 android:layout_height="wrap_content"		    	 
		    	 
		    	 android:textColor="@color/black"	
		    	 android:textSize="20dp"		
		         android:text="@string/monthTotal" />
		        <TextView
		    	 android:layout_width="wrap_content"
		   		 android:layout_height="wrap_content"		    	
		    	 
		    	 android:gravity="right"
		    	 android:id="@+id/monthRate"	
		    	 android:textColor="@color/lime"		
		    	 android:textSize="20dp"	
		         android:text="@string/rate" />	
		         <TextView
		            android:id="@+id/unit3"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		           
		            android:text="KB"
		            android:textColor="@color/black"
		            android:textSize="20dp" />	        
		       
		    </LinearLayout>
		     <!-- 第一行的第一个格子 填充内容结束--> 
		
		    
		</LinearLayout>
		<!-- 第一行的第一个格子 内部的布局结束-->	
		
		
		
	    
	    </LinearLayout>
	   <!-- 第一行的第一个格子结束 -->	
	  
	  <!-- 第一行的第二个格子开始 -->	  
	  <LinearLayout 
	   	android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:orientation="vertical"
		android:layout_weight="1.0"		
		
	    >  
	    <com.hiapk.progressbar.MyProgressBar
                    android:id="@+id/progressbar_mobile"
                    style="@style/myProgressBarStyleForV"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="bottom"
                    android:max="100"
                    android:progress="0" >
                </com.hiapk.progressbar.MyProgressBar>

	    
	    </LinearLayout>
	    <!-- 第一行的第二个格子结束 -->	
	      
	 </LinearLayout>
	 <!-- 第一行的第二行结束-->	
	    
	</LinearLayout>
	<!-- 第一行结束 -->
	
	
	<!-- 第二行开始 -->	
	<LinearLayout 
	   	android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:layout_weight="1.0"		
		android:layout_margin="5dip"
		android:background="@drawable/bg_about"
	    >
	
	<!-- 第二行的第一行标题 开始-->	
	<LinearLayout 
	    		android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:layout_weight="0.1"
				android:layout_margin="5dip"
		        >
		        
		        <LinearLayout 
		            android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal"
					android:layout_weight="1"
					android:gravity="left"	
		            >
		            <ImageView 
		         		android:layout_width="wrap_content"
		   		 		android:layout_height="wrap_content"		   		 	   		 
		   			    android:src="@drawable/wireless"/>
		            <TextView
		    	 		 android:layout_width="fill_parent"
		   				 android:layout_height="wrap_content"
		   				 android:gravity="center"	
		    			 android:textColor="@color/black"	
		    			 android:textSize="25dp"
		        		 android:text="@string/wifi" />	
		        </LinearLayout>
		        
		        <LinearLayout 
		            android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal"
					android:layout_weight="1"
		            >		        		
		         </LinearLayout>	 
	    
	</LinearLayout>
	<!-- 第二行的第一行标题 结束-->	
	
	<!-- 第二行的第二行 开始-->	
	<LinearLayout 
	    		android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:layout_weight="1.0"	
	    >
		        
	<!-- 第二行的第一个格子 开始-->	
	<LinearLayout 
	   	android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:orientation="vertical"
		android:layout_weight="0.5"	
		android:background="@drawable/bg_about"
		
	    >
	    <!-- 第二行的第一个格子 内部的布局开始-->	

		<LinearLayout
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:layout_margin="10dip"
		    android:orientation="vertical" >
<!-- 第二行的第一个格子 填充内容开始--> 
		    <LinearLayout 
		        android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:orientation="horizontal"
				android:layout_weight="1.0"						
		        >
		        
		        <TextView
		    	 android:layout_width="wrap_content"
		   		 android:layout_height="wrap_content"		    	 
		    	 
		    	 android:textColor="@color/black"		
		    	 android:textSize="20dp"	
		         android:text="@string/todayUsed" />
		        <TextView
		    	 android:layout_width="wrap_content"
		   		 android:layout_height="wrap_content"		    	 
		    	 
		    	 android:gravity="right"
		    	 android:id="@+id/wifiTodayRate"
		    	 android:textColor="@color/lime"		    	 
		    	 android:textSize="20dp"
		         android:text="@string/rate" />
		        <TextView
		            android:id="@+id/unit4"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            
		            android:text="KB"
		            android:textColor="@color/black"
		            android:textSize="20dp" />
		        
		    </LinearLayout>
		    
		    <LinearLayout 
		        android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:orientation="horizontal"
				android:layout_weight="1.0"	
		        >
		        <TextView
		    	 android:layout_width="wrap_content"
		   		 android:layout_height="wrap_content"		    	 
		    	 
		    	 android:textColor="@color/black"	
		    	 android:textSize="20dp"	
		         android:text="@string/weekUsed" />
		        <TextView
		    	 android:layout_width="wrap_content"
		   		 android:layout_height="wrap_content"		    	 
		    	 
		    	 android:gravity="right"
		    	 android:id="@+id/wifiWeekRate"	
		    	 android:textColor="@color/lime"		
		    	 android:textSize="20dp"	
		         android:text="@string/rate" />
		        <TextView
		            android:id="@+id/unit5"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            
		            android:text="KB"
		            android:textColor="@color/black"
		            android:textSize="20dp" />
		        
		    </LinearLayout>
		    
		    <LinearLayout 
		        android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:orientation="horizontal"
				android:layout_weight="1.0"	
		        >
		        <TextView
		    	 android:layout_width="wrap_content"
		   		 android:layout_height="wrap_content"    	 
		    	 
		    	 android:textColor="@color/black"	
		    	 android:textSize="20dp"		
		         android:text="@string/monthTotal" />
		        <TextView
		    	 android:layout_width="wrap_content"
		   		 android:layout_height="wrap_content"		    	
		    	 
		    	 android:gravity="right"
		    	 android:id="@+id/wifiMonthRate"	
		    	 android:textColor="@color/lime"			
		    	 android:textSize="20dp"	
		         android:text="@string/rate" />	
		         <TextView
		            android:id="@+id/unit6"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            
		            android:text="KB"
		            android:textColor="@color/black"
		            android:textSize="20dp" />	        
		       
		    </LinearLayout>
		     <!-- 第二行的第一个格子 填充内容结束--> 
		
		    
		</LinearLayout>
		<!-- 第二行的第一个格子 内部的布局结束-->	
		
		
		
	    
	    </LinearLayout>
	   <!-- 第二行的第一个格子结束 -->	
	  
	  <!-- 第二行的第二个格子开始 -->	  
	  <LinearLayout 
	   	android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:orientation="vertical"
		android:layout_weight="1.0"		
		
	    >  
	    <com.hiapk.progressbar.MyProgressBar
                    android:id="@+id/progressbar_wifi"
                    style="@style/myProgressBarStyleForV"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="bottom"
                    android:max="100"
                    android:progress="0" >
                </com.hiapk.progressbar.MyProgressBar>
	    
	    </LinearLayout>
	    <!-- 第二行的第二个格子结束 -->	
	      
	 </LinearLayout>
	 <!-- 第二行的第二行结束-->	
	    
	</LinearLayout>
	
	<!-- 第二行结束 -->

	
</LinearLayout>
