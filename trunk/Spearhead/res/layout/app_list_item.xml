<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/list_backgroundlayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/linear_selector0"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="45dip"
            android:layout_height="50dip"
            android:layout_gravity="center" >

            <ImageView
                android:id="@+id/icon"
                android:layout_width="40dip"
                android:layout_height="40dip"
                android:layout_gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/darkgray2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/traffic_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/darkgray2" />

            <TextView
                android:id="@+id/trafficup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/darkgray2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="100dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:focusable="false"
            android:orientation="horizontal" >

            <CheckBox
                android:id="@+id/e_toggle"
                android:layout_width="0dip"
                android:layout_height="50dip"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/btn_check"
                android:button="@null" />

            <CheckBox
                android:id="@+id/wifi_toggle"
                android:layout_width="0dip"
                android:layout_height="50dip"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/btn_check"
                android:button="@null" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/detail_menu"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:background="@drawable/bground_dark"
        android:orientation="horizontal"
        android:paddingBottom="2dip"
        android:paddingTop="8dip"
        android:visibility="gone" >

        <Button
            android:id="@+id/bt_manage"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dip"
            android:layout_weight="1"
            android:background="@drawable/btnselector_dark0"
            android:text="应用管理" />

        <Button
            android:id="@+id/bt_detail"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:layout_weight="1"
            android:background="@drawable/btnselector_dark0"
            android:text="流量详情" />

        <Button
            android:id="@+id/bt_uninstalled"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_marginRight="10dip"
            android:layout_weight="1"
            android:background="@drawable/btnselector_dark0"
            android:text="卸载" />
    </LinearLayout>

</LinearLayout>