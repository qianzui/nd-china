<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:paddingLeft="10dp"
    android:paddingRight="10dp" >

    <LinearLayout
        android:id="@+id/widget1X4LinnerLayout1"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="2.0"
        android:background="@drawable/widgetbackground"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/widgetImage1"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="2.0"
            android:contentDescription="@string/app_name"
            android:maxHeight="36dp"
            android:maxWidth="36dp"
            android:src="@drawable/icon_wifi_off" />

        <TextView
            android:id="@+id/widgetImageText1"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1.0"
            android:text="WIFI"
            android:textColor="@color/gray" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/widget1X4LinnerLayout2"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="2.0"
        android:background="@drawable/widgetbackground"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/widgetImage2"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="2.0"
            android:contentDescription="@string/app_name"
            android:maxHeight="36dp"
            android:maxWidth="36dp"
            android:src="@drawable/icon_mobile_off" />

        <TextView
            android:id="@+id/widgetImageText2"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1.0"
            android:text="2G/3G"
            android:textColor="@color/gray" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/widget1X4LinnerLayout3"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="7.0"
        android:background="@drawable/widgetbackground"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/widgetTextview1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.0"
            android:text="今日已用:加载中...."
            android:textColor="@color/gray" />

        <TextView
            android:id="@+id/widgetTextview2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.0"
            android:text="本月已用:加载中...."
            android:textColor="@color/gray" />

        <TextView
            android:id="@+id/widgetTextview3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.0"
            android:text="当前日期:加载中...."
            android:textColor="@color/gray" />
    </LinearLayout>

</LinearLayout>