<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bground_dark"
    android:orientation="vertical" >

    <!-- 标题栏开始 -->

    <FrameLayout
        android:id="@+id/sensorSettingTitleBackground"
        android:layout_width="fill_parent"
        android:layout_height="48dip"
        android:background="@drawable/maintab_title_bg0"
        android:paddingLeft="13dip"
        android:paddingRight="10dip" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/sensor_setting_back"
                android:layout_width="35dip"
                android:layout_height="35dip"
                android:layout_gravity="center"
                android:background="@drawable/back_btn"
                android:contentDescription="@string/img_content_backbtn" />

            <ImageView
                android:layout_width="0.5dip"
                android:layout_height="40dip"
                android:layout_gravity="center_vertical"
                android:background="@drawable/divider"
                android:contentDescription="@string/img_content_backbtn_line" />
        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="@string/title_shake_sensor_setting"
            android:textColor="@color/white"
            android:textSize="23sp" />
    </FrameLayout>
    <!-- 标题栏结束 -->


    <!-- 第二行开始 -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dip"
            android:layout_marginLeft="12dip"
            android:layout_marginRight="12dip"
            android:layout_marginTop="12dip"
            android:text="@string/tip_shake_sensor_setting"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal" >
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="测试："
                android:textColor="@color/black"
                android:layout_gravity="center_vertical"
                android:textSize="18sp"/>

            <ImageView
                android:id="@+id/shake_test_image"
                android:layout_width="150dip"
                android:layout_height="50dip"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dip"
            android:gravity="center"
            android:orientation="vertical" >

            <SeekBar
                android:id="@+id/seekBar"
                android:layout_width="250dip"
                android:layout_height="30dip" />
        </LinearLayout>

        <Button
            android:id="@+id/shake_reset_button"
            android:layout_width="100dip"
            android:layout_height="40dip"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dip"
            android:background="@drawable/btnselector_light0"
            android:text="重置"
            android:textColor="@color/button_color_light"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>