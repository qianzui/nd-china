<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:roundProgress="http://schemas.android.com/apk/res/com.hiapk.spearhead"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bground_dark"
    android:orientation="vertical" >

    <!-- 标题栏开始 -->

    <RelativeLayout
        android:id="@+id/mainTitleBackground"
        android:layout_width="fill_parent"
        android:layout_height="48dip"
        android:background="@drawable/maintab_title_bg0"
        android:orientation="horizontal"
        android:paddingRight="10dip" >

        <TextView
            android:id="@+id/mainTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="23sp" />

        <Button
            android:id="@+id/refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/arrow_refresh_icon_off"
            android:textColor="@color/darkgray2" />
    </RelativeLayout>
    <!-- 标题栏结束 -->
    <!-- 总的 -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bground_dark"
        android:orientation="vertical" >

        <!-- 第一行开始 -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="5dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="5dip"
            android:layout_weight="1"
            android:background="@drawable/bg_about"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <!-- 第一行的第一行标题开始 -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/mobile2"
                    android:gravity="center"
                    android:paddingLeft="10dip"
                    android:text="@string/twoGthreeG"
                    android:textColor="@color/darkgray2"
                    android:textSize="25sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:background="@drawable/shu"
                    android:orientation="horizontal" >
                </LinearLayout>

                <!-- 第一行的第一行标题 结束 -->

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:baselineAligned="false"
                    android:orientation="vertical"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="@string/todayUsed"
                        android:textColor="@color/darkgray2"
                        android:textSize="20sp" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/todayRate"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_gravity="left"
                            android:text="@string/rate"
                            android:textColor="@color/blueflock"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/unit1"
                            android:layout_width="match_parent"
                            android:layout_height="fill_parent"
                            android:layout_gravity="right"
                            android:gravity="right"
                            android:text="KB"
                            android:textColor="@color/darkgray2"
                            android:textSize="20sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/divider" />

            <LinearLayout
                android:id="@+id/main_framelayout_progress"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:baselineAligned="false" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:baselineAligned="false"
                    android:orientation="horizontal" >

                    <com.hiapk.ui.chart.CircleProgress
                        android:id="@+id/main_progressbar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        roundProgress:Inside_Interval="10"
                        roundProgress:Paint_Width="20"
                        roundProgress:TrueCircle_Heitht="true"
                        roundProgress:fill="false"
                        roundProgress:max="100" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:baselineAligned="false"
                    android:orientation="vertical"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:baselineAligned="false"
                        android:gravity="center_horizontal|bottom"
                        android:paddingBottom="2dp" >

                        <TextView
                            android:id="@+id/monthRate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/blueflock"
                            android:textSize="25sp" />

                        <TextView
                            android:id="@+id/unit3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="MB"
                            android:textColor="@color/darkgray2"
                            android:textSize="25sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:baselineAligned="false"
                        android:gravity="center_horizontal|top"
                        android:paddingTop="2dp" >

                        <TextView
                            android:id="@+id/main_seperate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="/"
                            android:textColor="@color/darkgray2"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/monthRemain"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/blueflock"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/unit4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="MB"
                            android:textColor="@color/darkgray2"
                            android:textSize="20sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <!-- 第一行结束 -->
        </LinearLayout>

        <!-- 第二行开始 -->

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="5dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_weight="1.3"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/linearlayout_wifi"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:background="@drawable/bg_about"
                android:orientation="vertical"
                android:paddingBottom="-5dp"
                android:paddingTop="5dp" >
            </LinearLayout>

            <ImageButton
                android:id="@+id/img_btn_change_chart"
                android:layout_width="30dp"
                android:layout_height="fill_parent"
                android:layout_gravity="right"
                android:background="#00000000"
                android:paddingLeft="15dp"
                android:src="@drawable/arrow_enabled" />
        </FrameLayout>
        <!-- 第二行结束 -->

    </LinearLayout>

</LinearLayout>