<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bground_dark"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/phonesetTitleBackground"
        android:layout_width="fill_parent"
        android:layout_height="48dip"
        android:background="@drawable/maintab_title_bg0"
        android:paddingLeft="10dip"
        android:paddingRight="10dip" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/phoneset_back"
                android:layout_width="35dip"
                android:layout_height="35dip"
                android:layout_gravity="center"
                android:background="@drawable/back_btn" />

            <ImageView
                android:layout_width="0.5dip"
                android:layout_height="40dip"
                android:layout_gravity="center_vertical"
                android:background="@drawable/divider" />
        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="手机卡设置"
            android:textColor="@color/whitesmoke"
            android:textSize="23sp" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dip" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="省份"
            android:textColor="@color/darkgray2"
            android:textSize="19dip" />

        <Button
            android:id="@+id/province"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="10dip"
            android:layout_weight="2"
            android:background="@drawable/send_message_bg1"
            android:gravity="center"
            android:prompt="@string/provinceSelect"
            android:textColor="@color/blueflock"
            android:textSize="19dip" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="城市"
            android:textColor="@color/darkgray2"
            android:textSize="19dip" />

        <Button
            android:id="@+id/city"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="10dip"
            android:layout_weight="2"
            android:background="@drawable/send_message_bg1"
            android:gravity="center"
            android:prompt="@string/citySelect"
            android:textColor="@color/blueflock"
            android:textSize="19dip" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="运营商"
            android:textColor="@color/darkgray2"
            android:textSize="19dip" />

        <Button
            android:id="@+id/operator"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="10dip"
            android:layout_weight="2"
            android:background="@drawable/send_message_bg1"
            android:gravity="center"
            android:prompt="@string/operatorSelect"
            android:textColor="@color/blueflock"
            android:textSize="19dip" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="手机卡品牌"
            android:textColor="@color/darkgray2"
            android:textSize="19dip" />

        <Button
            android:id="@+id/brand"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="@drawable/send_message_bg1"
            android:gravity="center"
            android:prompt="@string/brankSelect"
            android:textColor="@color/blueflock"
            android:textSize="19dip" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="15dp" >

        <Button
            android:id="@+id/next"
            android:layout_width="150dip"
            android:layout_height="60dip"
            android:layout_gravity="center"
            android:background="@drawable/btnselector_light0"
            android:gravity="center"
            android:padding="2dp"
            android:text="下一步"
            android:textColor="@color/button_color_light"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>