<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dip"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <Button
        android:id="@+id/bt_today"
        android:layout_width="150dip"
        android:layout_height="40dip"
        android:layout_marginBottom="2dip"
        android:layout_marginLeft="1dip"
        android:layout_marginRight="1dip"
        android:background="@color/zero"
        android:textColor="@color/white"
        android:text="今日流量"
        />
    <Button
        android:id="@+id/bt_week"
        android:layout_width="150dip"
        android:layout_height="40dip"
        android:layout_marginBottom="2dip"
        android:layout_marginLeft="1dip"
        android:layout_marginRight="1dip"
        android:background="@color/one"
        android:textColor="@color/white"
        android:text="本周流量"
        />
    <Button
        android:id="@+id/bt_month"
        android:layout_width="150dip"
        android:layout_height="40dip"
        android:layout_marginBottom="2dip"
        android:layout_marginLeft="1dip"
        android:layout_marginRight="1dip"
        android:background="@color/two"
        android:textColor="@color/white"
        android:text="本月流量"
        />
    <Button
        android:id="@+id/bt_mobile"
        android:layout_width="150dip"
        android:layout_height="40dip"
        android:layout_marginBottom="2dip"
        android:layout_marginLeft="1dip"
        android:layout_marginRight="1dip"
        android:background="@color/three"
        android:textColor="@color/white"
        android:text="移动流量"
        />
    <Button
        android:id="@+id/bt_wifi"
        android:layout_width="150dip"
        android:layout_height="40dip"
        android:layout_marginBottom="2dip"
        android:layout_marginLeft="1dip"
        android:layout_marginRight="1dip"
        android:background="@color/four"
        android:textColor="@color/white"
        android:text="WIFI流量"
        />
    <Button
        android:id="@+id/bt_notif"
        android:layout_width="150dip"
        android:layout_height="40dip"
        android:layout_marginBottom="2dip"
        android:layout_marginLeft="1dip"
        android:layout_marginRight="1dip"
        android:background="@color/five"
        android:textColor="@color/white"
        android:text="通知栏流量"
        />

</LinearLayout>